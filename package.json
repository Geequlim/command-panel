{
	"name": "tiny-tool-kit",
	"displayName": "轻娱工具集",
	"description": "轻娱工具集",
	"version": "0.0.8",
	"publisher": "Geequlim",
	"icon": "media/logo.png",
	"engines": { "vscode": "^1.66.0" },
	"categories": [ "Other" ],
	"activationEvents": [ "*" ],
	"main": "./dist/main.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "tiny-tool-kit",
					"title": "轻娱工具集",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"tiny-tool-kit": [
				{
					"id": "games.tinyfun.vscode.view.develop",
					"name": "开发"
				},
				{
					"id": "games.tinyfun.vscode.view.publish",
					"name": "发布"
				},
				{
					"id": "games.tinyfun.vscode.view.tools",
					"name": "工具"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "games.tinyfun.vscode/item/context/run",
					"when": "viewItem == games.tinyfun.vscode.view.item.runnable",
					"group": "inline"
				}
			]
		},
		"commands": [
			{
				"command": "games.tinyfun.vscode/item/context/run",
				"title": "运行",
				"icon": "$(run)"
			},
			{
				"command": "games.tinyfun.vscode/edit-project",
				"title": "编辑",
				"icon": "$(edit)"
			},
			{
				"command": "games.tinyfun.vscode/create-project",
				"title": "创建基于 tiny-game-kit 项目"
			}
		],
		"configuration": [
			{
				"title": "轻娱工具集",
				"properties": {
					"tinyfun.templateProjectRepo": {
						"type": "string",
						"default": "http://git.tinyfun.studio:81/tinyfun/tiny-game-kit.git",
						"description": "用于创建项目的模板项目"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts",
		"build": "vsce package"
	},
	"devDependencies": {
		"@types/cross-spawn": "^6.0.2",
		"@types/glob": "^7.2.0",
		"@types/js-yaml": "^4.0.5",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.66.0",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"ts-loader": "^9.2.8",
		"typescript": "^4.5.5",
		"vsce": "^2.7.0",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"chalk": "^5.0.1",
		"cross-spawn": "^7.0.3",
		"fast-glob": "^3.2.11",
		"js-yaml": "^4.1.0"
	}
}
