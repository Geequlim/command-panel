{
	"name": "tiny-took-kit",
	"displayName": "tiny-took-kit",
	"description": "轻娱工具集",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:project.tiny"
	],
	"main": "./dist/main.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "tiny-tool-kit",
					"title": "轻娱工具集",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"tiny-tool-kit": [
				{
					"id": "games.tinyfun.vscode.view.develop",
					"name": "开发"
				},
				{
					"id": "games.tinyfun.vscode.view.publish",
					"name": "发布"
				},
				{
					"id": "games.tinyfun.vscode.view.tools",
					"name": "工具"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "games.tinyfun.vscode/item/context/run",
					"when": "viewItem == games.tinyfun.vscode.view.item.runnable",
					"group": "inline"
				}
			]
		},
		"commands": [
			{
				"command": "games.tinyfun.vscode/item/context/run",
				"title": "运行",
				"icon": "$(run)"
			}
		]
		
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/js-yaml": "^4.0.5",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.66.0",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"ts-loader": "^9.2.8",
		"typescript": "^4.5.5",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"js-yaml": "^4.1.0"
	}
}
